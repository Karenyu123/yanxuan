.cart {
  min-height: 100vh;
  width: 100%;
  background: #f1f1f1;
}
.cart .header {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-around;
  color: var(--lightFontColor);
}
.cart .header .txt {
  flex: 1;
  text-align: center;
}
.cart .goods-list {
  width: 100%;
  background: #fff;
}
.cart .goods-list .goods-item {
  display: flex;
}
.cart .goods-list .goods-item .radio {
  width: 6%;
}
.cart .goods-list .goods-item .img {
  width: 20%;
}
.cart .goods-list .goods-item .info {
  width: 68%;
}
.cart .goods-list .goods-item .count {
  width: 7%;
}