.cart {
  min-height: 100vh;
  width: 100%;
  background: #f1f1f1;
}
.cart .header {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-around;
  color: var(--lightFontColor);
}
.cart .header .txt {
  flex: 1;
  text-align: center;
}
.cart .goods-list {
  width: 100vw;
  background: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.cart .goods-list .goods-item {
  display: flex;
  align-items: center;
}
.cart .goods-list .goods-item .radio {
  width: 6%;
}
.cart .goods-list .goods-item .img {
  width: 30%;
}
.cart .goods-list .goods-item .info {
  width: 58%;
}
.cart .goods-list .goods-item .info .name {
  font-size: 28rpx;
  color: var(--lightFontColor);
  line-height: 50rpx;
}
.cart .goods-list .goods-item .info .price {
  font-size: 26rpx;
  color: var(--themeColor);
  line-height: 50rpx;
}
.cart .goods-list .goods-item .count {
  width: 7%;
  color: var(--lightFontColor);
}
.cart .cart-footer {
  height: 90rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  display: flex;
  line-height: 90rpx;
  justify-content: space-between;
}
.cart .cart-footer .left {
  width: 75%;
  padding-left: 30rpx;
}
.cart .cart-footer .order {
  width: 25%;
  background: var(--themeColor);
  text-align: center;
  color: #fff;
}